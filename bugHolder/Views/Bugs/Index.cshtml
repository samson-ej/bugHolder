@*@model IEnumerable<bugHolder.Models.Bug>*@
@model bugHolder.Models.BugStatusViewModel

@{
    ViewData["Title"] = "Index";

}

<h2>Bug List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Bugs" asp-action="Index" method="get">
    <p>
        <select asp-for="BugStatus" asp-items="Model.Statuses">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bugs[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bugs[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bugs[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bugs[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bugs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
